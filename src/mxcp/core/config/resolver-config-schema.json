{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MXCP Resolver Config",
  "type": "object",
  "properties": {
    "config": {
      "type": "object",
      "description": "Configuration for external resolvers (vault, 1password, file, env).",
      "properties": {
        "vault": {
          "type": "object",
          "description": "Configuration for Vault integration.",
          "required": ["enabled"],
          "properties": {
            "enabled": { 
              "type": "boolean",
              "description": "Whether Vault integration is enabled."
            },
            "address": {
              "type": "string",
              "format": "uri",
              "description": "The Vault server address (e.g., https://vault.example.com)."
            },
            "token_env": {
              "type": "string",
              "description": "The environment variable name containing the Vault token.",
              "default": "VAULT_TOKEN"
            }
          },
          "additionalProperties": false
        },
        "onepassword": {
          "type": "object",
          "description": "Configuration for 1Password integration using service account.",
          "required": ["enabled"],
          "properties": {
            "enabled": { 
              "type": "boolean",
              "description": "Whether 1Password integration is enabled."
            },
            "token_env": {
              "type": "string",
              "description": "The environment variable name containing the 1Password service account token.",
              "default": "OP_SERVICE_ACCOUNT_TOKEN"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
} 